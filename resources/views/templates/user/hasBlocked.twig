{% extends 'templates/app.twig' %}

{% block pageTitle %}User blocked{% endblock %}

{% block content %}

    <div class="row">

        <div class="col-md-6 mx-auto text-center">

            <div class="card">
                <div class="card-header">
                    <h3>Blocked</h3>
                </div>
                <div class="card-body">
                    <p>You have {{ user.username }} Blocked.</p>
                    <button class="btn btn-outline-warning" onclick="confirmUnblockUser({{ user.id }})">Unblock</button>

                    <hr>
                    <a href="#" onclick="history.back(1)">Go Back</a>
                </div>
            </div>

        </div>

    </div>

{% endblock %}