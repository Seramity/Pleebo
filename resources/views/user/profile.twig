{% extends 'templates/user/profile_template.twig' %}

{% block pageTitle %}
    {{ user.username }}
{% endblock %}

{% block profile_content %}

    <div class="col-lg-9">

        {% include 'user/partials/profile_nav.twig' %}

        {% if not questions.isEmpty() %}
            {% for question in questions %}
                {% include 'templates/question/question.twig' %}
            {% endfor %}
            {{ questions.links | raw }}
        {% else %}
            <h2>:( This place is quite empty, for now.</h2>
        {% endif %}


    </div>

{% endblock %}